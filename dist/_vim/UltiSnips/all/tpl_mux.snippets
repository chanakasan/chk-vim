snippet mux
#!/usr/bin/env bash

set -e

session_name() {
  local basename_str=$(basename \`pwd\`)
  echo "${basename_str//\./_}"
}
$0
main() {
  local session=\`session_name\`
  tmux new-session -s $session -n "main" -d

  tmux new-window -t $session:2 -n "console"

  tmux select-window -t $session:1
  tmux attach -t $session
}

main
endsnippet
